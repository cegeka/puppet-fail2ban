#
# Custom jail <%= @name %>
# Managed by Puppet
#

[<%= @name %>]
enabled  = <%= @enabled %>
<% if @action -%>
action   = <%= @action %>
<% end -%>
filter   = <%= @filter %>
logpath  = <%= @logpath %>
maxretry = <%= @maxretry %>
<% if @findtime -%>
findtime     = <%= @findtime %>
<% end -%>
bantime  = <%= @bantime %>
<% if @port -%>
port     = <%= @port %>
<% end -%>
<% if @backend -%>
backend  = <%= @backend %>
<% end -%>
<% if !@ignoreip.empty? -%>
ignoreip = <% @ignoreip.each do |ip_address| -%><%= ip_address %> <% end -%>
<% end -%>
